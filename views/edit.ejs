<%- include('partials/header.ejs') %>
<div class="container mt-5">
    <h1 class="text-center">Edit Vlog</h1>
    <form action="/edit/<%= vlogId %>" method="post" class="mt-4">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" id="title" name="title" class="form-control" value="<%= vlog.title %>" required>
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea name="content" id="content" cols="30" rows="10" class="form-control" required><%= vlog.content %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
<%- include('partials/footer.ejs') %>
